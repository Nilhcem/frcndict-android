<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default theme -->
	<style name="DefaultTheme" parent="@android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="bgColor">@color/white</item>
		<item name="fgColor">@color/black</item>
		<item name="introColor">@color/search_intro_light</item>
		<item name="hanziColor">@color/black</item>
		<item name="pinyinColor">@color/black</item>
		<item name="translationColor">@color/grey</item>
		<item name="searchTopBar">@drawable/search_top_bar_default</item>
		<item name="searchListDivider">@drawable/list_divider_default</item>
		<item name="searchListItemSelector">@drawable/list_item_selector_default</item>
		<item name="meaningTitleColor">@color/meaning_title_grey_default</item>
	</style>

	<!-- Night mode theme -->
	<style name="DarkTheme" parent="@android:style/Theme.Black">
		<item name="android:windowNoTitle">true</item>
		<item name="bgColor">@color/dark_blue</item>
		<item name="fgColor">@color/light_grey</item>
		<item name="introColor">@color/search_intro_dark</item>
		<item name="hanziColor">@color/light_grey</item>
		<item name="pinyinColor">@color/lighter_grey</item>
		<item name="translationColor">@color/light_grey</item>
		<item name="searchTopBar">@drawable/search_top_bar_dark</item>
		<item name="searchListDivider">@drawable/list_divider_dark</item>
		<item name="searchListItemSelector">@drawable/list_item_selector_dark</item>
		<item name="meaningTitleColor">@color/meaning_title_grey_dark</item>
	</style>
</resources>
